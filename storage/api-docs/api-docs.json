    "components": {
        "schemas": {
            "StoreBatchNotificationRequest": {
                "required": [
                    "notifications"
                ],
                "properties": {
                    "notifications": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/StoreNotificationRequest"
                        },
                        "maxItems": 1000,
                        "minItems": 1
                    }
                },
                "type": "object"
            },
            "StoreNotificationRequest": {
                "description": "Provide either content or template_id + variables.",
                "required": [
                    "to",
                    "channel"
                ],
                "properties": {
                    "to": {
                        "type": "string",
                        "maxLength": 255
                    },
                    "channel": {
                        "type": "string",
                        "enum": [
                            "sms",
                            "email",
                            "push"
                        ]
                    },
                    "content": {
                        "type": "string",
                        "nullable": true
                    },
                    "template_id": {
                        "type": "string",
                        "format": "uuid",
                        "nullable": true
                    },
                    "variables": {
                        "type": "object",
                        "nullable": true,
                        "additionalProperties": true
                    },
                    "priority": {
                        "type": "string",
                        "enum": [
                            "high",
                            "normal",
                            "low"
                        ]
                    },
                    "scheduled_at": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    }
                },
                "type": "object"
            },
            "StoreTemplateRequest": {
                "required": [
                    "name",
                    "channel",
                    "body"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "maxLength": 255
                    },
                    "channel": {
                        "type": "string",
                        "enum": [
                            "sms",
                            "email",
                            "push"
                        ]
                    },
                    "body": {
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "TemplateValidationRequest": {
                "required": [
                    "body"
                ],
                "properties": {
                    "body": {
                        "type": "string"
                    },
                    "sample_variables": {
                        "type": "object",
                        "nullable": true,
                        "additionalProperties": true
                    }
                },
                "type": "object"
            },
            "UpdateTemplateRequest": {
                "properties": {
                    "name": {
                        "type": "string",
                        "maxLength": 255
                    },
                    "channel": {
                        "type": "string",
                        "enum": [
                            "sms",
                            "email",
                            "push"
                        ]
                    },
                    "body": {
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "Notification": {
                "required": [
                    "id",
                    "batch_id",
                    "to",
                    "channel",
                    "priority",
                    "status",
                    "correlation_id",
                    "created_at",
                    "updated_at"
                ],
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "batch_id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "template_id": {
                        "type": "string",
                        "format": "uuid",
                        "nullable": true
                    },
                    "to": {
                        "type": "string"
                    },
                    "channel": {
                        "type": "string",
                        "enum": [
                            "sms",
                            "email",
                            "push"
                        ]
                    },
                    "content": {
                        "type": "string",
                        "nullable": true
                    },
                    "variables": {
                        "type": "object",
                        "nullable": true,
                        "additionalProperties": true
                    },
                    "priority": {
                        "type": "string",
                        "enum": [
                            "high",
                            "normal",
                            "low"
                        ]
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "pending",
                            "queued",
                            "sending",
                            "accepted",
                            "delivered",
                            "failed",
                            "canceled",
                            "scheduled",
                            "unknown"
                        ]
                    },
                    "provider_message_id": {
                        "type": "string",
                        "nullable": true
                    },
                    "attempts": {
                        "type": "integer"
                    },
                    "last_error": {
                        "type": "string",
                        "nullable": true
                    },
                    "correlation_id": {
                        "type": "string"
                    },
                    "scheduled_at": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    },
                    "accepted_at": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    },
                    "delivered_at": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    },
                    "last_status_check_at": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    },
                    "next_status_check_at": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            },
            "Template": {
                "required": [
                    "id",
                    "name",
                    "channel",
                    "body",
                    "created_at",
                    "updated_at"
                ],
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "name": {
                        "type": "string"
                    },
                    "channel": {
                        "type": "string",
                        "enum": [
                            "sms",
                            "email",
                            "push"
                        ]
                    },
                    "body": {
                        "type": "string"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            }
        }
    },
    "tags": [
        {
            "name": "Notifications",
